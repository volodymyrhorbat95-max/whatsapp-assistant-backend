# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Authentication
# CRITICAL: Set a strong, random API key for production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your-secure-random-api-key-here

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=matheus_whatsapp
DB_USER=postgres
DB_PASSWORD=your_password

# Redis (Required for WhatsApp message queue)
# CRITICAL: Redis is REQUIRED for WhatsApp functionality
# Without Redis, WhatsApp messages will not be processed
# To disable WhatsApp (dev/test only): DISABLE_REDIS=true
REDIS_HOST=localhost
REDIS_PORT=6379

# Twilio
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Audio Transcription
WHISPER_API_KEY=your_openai_api_key
TRANSCRIPTION_SERVICE=whisper
